{
  "name": "kuzzle-application",
  "version": "1.0.0",
  "description": "Kuzzle template application",
  "author": "kuzzleio",
  "scripts": {
    "build": "swc . -d dist",
    "start": "node dist/app.js",
    "dev": "pnpm build && pnpm start",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "watch": "nodemon --watch lib --ext ts --exec 'pnpm dev'"
  },
  "main": "app.ts",
  "license": "Apache-2.0",
  "dependencies": {
    "kuzzle": "2.31.0",
    "kuzzle-plugin-prometheus": "4.2.1"
  },
  "devDependencies": {
    "@swc/cli": "0.4.1-nightly.20240914",
    "@swc/core": "1.7.28",
    "@swc/jest": "0.2.36",
    "@types/jest": "29.5.13",
    "@types/node": "20",
    "jest": "29.7.0",
    "nodemon": "3.1.7"
  },
  "files": [
    "dist/**/*",
    "package.json"
  ]
}
